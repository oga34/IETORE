<div class="container m-10">
    <div class="font-weight-bold mt-4 ml-3 h5">
        ジャンル一覧
    </div>
    <div class="form-group">
        <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
        <%= render "admin/shared/error_messages", model: f.object %>
            <%= f.label :ジャンル名, class: "mr-5 mt-2 mb-3 ml-3" %>
            <%= f.text_field :name %>
            <%= f.submit '新規登録',class: "btn btn-success" %>
        <% end %>
    </div>
    <ul class="genre-list w-50">
        <% @genres.each do |genre| %>
	        <li id="item<%= genre.id %>" draggable="true" class="mt-2 bg-light">
	            <div class="row">
	                <div class="ml-5 d-flex align-items-center"><%= genre.name %></div>
	                <div class="ml-auto mr-5 d-flex align-items-center"><%= link_to "　編集する　", edit_admin_genre_path(genre.id), class: "btn btn-success" %></div>
	            </div>
	        </li>
	   　<% end %>
    </ul>
</div>