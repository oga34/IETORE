<div class="container m-10">
    <div class="font-weight-bold mt-4 ml-3 h5">
        ジャンル一覧
    </div>
    <div class="form-group">
        <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
        <%= render "admin/shared/error_messages", model: f.object %>
            <%= f.label :ジャンル名, class: "mr-5 mt-2 mb-3 ml-3" %>
            <%= f.text_field :name %>
            <%= f.submit '新規登録',class: "btn btn-success" %>
        <% end %>
    </div>
    <table class="table table-customers w-50" border="2" rules="rows" frame="hsides" bordercolor="silver">
        <thead  bgcolor="#DDDDDD">
            <tr>
                <th class="pl-5">ジャンル</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
    
        <tbody class="bg-light">
            <% @genres.each do |genre| %>
            <tr>
                <td style="vertical-align: middle" class="pl-5"><%= genre.name %></td>
                <td align="center"><%= link_to "　編集する　", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
                <td><%= link_to "削除", admin_genre_path(genre.id), method: :delete, class: "btn btn-danger" %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>