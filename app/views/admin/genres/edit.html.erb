<div class="container m-10">
    <div class="font-weight-bold mt-4 ml-3 h5">
        ジャンル編集
    </div>

    <div class="form-group　d-flex ml-5">
        <%= form_with model: @genre, url:admin_genre_path, method: :patch, local: true do |f| %>
            <%= render "admin/shared/error_messages", model: f.object %>
            <%= f.label :ジャンル名, class: "mr-5 mt-5 mb-5 ml-3" %>
            <%= f.text_field :name, class: "genre-form" %> 
            <%= f.submit "　変更を保存　", class: "btn btn-success ml-5" %>
        <% end %>
    </div>
</div>
