<!DOCTYPE html>
<html>
  <head>
    <title>Ietore</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body class="d-flex flex-column vh-100">
  <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <%= link_to admin_root_path do %>
            <%= image_tag "logo2.png" %>
          <% end %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if admin_signed_in? %>
            <li class="nav-item d-flex align-items-center">
              <i class="fas fa-users"></i>
              <%= link_to '会員一覧', admin_users_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item d-flex align-items-center">
              <i class="fas fa-running"></i>
              <%= link_to 'ジャンル一覧', admin_genres_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item d-flex align-items-center">
              <i class="fas fa-sign-out-alt"></i>
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link text-dark' %>
            </li>
            <% else %>
            <li class="nav-item d-flex align-items-center">
              <i class="fas fa-sign-in-alt"></i>
              <%= link_to "ログイン", new_user_session_path, class: 'nav-link text-dark' %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto">
    <%= render 'layouts/flash' %>
    <%= yield %>
    </main>
    <footer class="text-white pt-5 pb-4">
      
    </footer>
</body>

</html>