<div class="container m-10">
    <div class="font-weight-bold mt-4 h5">
    会員一覧
</div>
<table class="table table-customers" border="2" rules="rows" frame="hsides" bordercolor="silver">
    <thead bgcolor="#DDDDDD">
        <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
        </tr>
    </thead>
    
    <tbody class="bg-light">
     <% @users.each do |user| %>
     <tr>
        <td>
            <%= user.id %>
        </td>
        <td class="user-link">
         <%= link_to admin_user_path(user.id) do %>
            <%= user.first_name + user.last_name %>
         <% end %>
        </td>
        <td>
            <%= user.email %>
        </td>
        
        <% if user.is_deleted == false %>
            <td class="validity">有効</td>
        <% else %>
            <td class="withdraw">退会</td>
    　　<% end %>
    　　
     </tr>
     
     <% end %>
    </tbody>
</table>
<div class="d-flex justify-content-center">
    <%= paginate @users, theme: 'bootstrap-5' %>
</div>