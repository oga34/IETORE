<div class="container user-edit-page">
    <div class="user-edit-form">
      <div class="h3">会員情報編集</div>
       <%= form_with model: @user, url: admin_information_update_path, method: :patch, local: true do |f| %>
          <div class="error-message">
            <% if @user.errors.any? %>
              <%= @user.errors.count %>件のエラーメッセージが発生しました
              <ul>
              <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
              </ul>
            <% end %>
          </div>
          <div class="form-group form-inline input-group-sm">
            <span class="col-md-3 text-md-right font-weight-bold">プロフィール画像</span>
            <span class="col-md-3"><%= image_tag @user.get_profile_image(100,100) %></span>
          </div>
          <div class="form-group form-inline input-group-sm">
            <span class="col-md-3 text-md-right font-weight-bold">名前(漢字)</span>
            <span class="col-md-3"><%= @user.first_name + "　" + @user.last_name %></span>
		      </div>
		      <div class="form-group form-inline input-group-sm">
            <span class="col-md-3 text-md-right font-weight-bold">名前(フリガナ)</span>
            <span class="col-md-3"><%= @user.first_name_kana + "　" + @user.last_name_kana %></span>
		      </div>
		      <div class="form-group form-inline input-group-sm">
		        <span class="col-md-3 text-md-right font-weight-bold">ニックネーム</span>
            <span class="col-md-3"><%= @user.nickname %></span>
		      </div>
		      <div class="form-group form-inline input-group-sm">
		        <span class="col-md-3 text-md-right font-weight-bold">メールアドレス</span>
            <span class="col-md-3"><%= @user.email %></span>
		      </div>
		      <div class="form-group form-inline input-group-sm">
           <span class="col-md-3 text-md-right font-weight-bold">会員ステータス</span>
           <span class="col-md-3">
            <%= f.radio_button :is_deleted, :false %>
            <%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
            <%= f.radio_button :is_deleted, :true %>
            <%= f.label :is_deleted, "退会", {value: :true, style: "display: inline-block;"} %>
           </span>
           <%= f.submit "変更内容を保存", class: "btn btn-success mr-3 ml-3"  %>
          </div>
      <% end %>
    </div>
  </div>