<!-- 全ての会員の投稿一覧表示 -->

<div class="container">
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="row mt-3">
                <h5 class="font-weight-bold mt-4 ml-4">みんなの投稿</h5>
                <form class="search royalblue mt-4 ml-auto mr-5">
                    <input type="text" action="homes/index" name="search" style="height:30px;" placeholder="キーワードを入力">
                    <button type="submit" style="height:30px;"><i class="fa fa-search mb-1"></i></button>
                </form>
            </div>
            <%= render 'admin/layouts/post-index', posts: @posts %> 
         </div>
        <div class="col-sm-3"></div>
    </div>
</div>