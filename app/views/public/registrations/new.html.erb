<h2>新規会員登録</h2>

<%= form_with model: @user, url: registration_path(resource_name) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  
  <div class="form-group">
    <%= f.label :first_name, "名前" %>
    <%= f.label :first_name, "(姓)" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
    <%= f.label :last_name, "（名）" %>
    <%= f.text_field :last_name, autocomplete: "last_name" %>
  </div>
  
  <div class="form-group">
    <%= f.label :first_name_kana, "名前（フリガナ）" %>
    <%= f.label :first_name_kana, "(セイ)" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name" %>
    <%= f.label :last_name_kana, "（メイ）" %>
    <%= f.text_field :last_name_kana, autocomplete: "last_name" %>
  </div>
  
  <div class="form-group">
    <%= f.label :nickname, "ニックネーム" %>
    <%= f.text_field :nickname, autocomplete: "nickname" %>
  </div>
      
  <div class="form-group">
    <%= f.label :email, "Eメール" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "パスワード確認用" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
